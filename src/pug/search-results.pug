//- Variables
block append vars
  - var lang            = 'zh-Hant-TW'
  - var pageTitle       = 'SRDA | 搜尋結果'
  - var pageDescription = 'Description'
  - var bodyClass       = 'sidebar-mini fixed'


block contentMain
  //- Navbar
  include templates/views/sections/_header
  //- Side-Nav
  include templates/views/sections/_sidebar-by_filter

  main.wrapper

    .content-wrapper

      .page-title.search-bar-wrapper
        // 搜尋分類
        include templates/views/sections/_search-bar

      .row
        .col-md-12
          .card
            .search-controls
              .text-muted.pull-left
                form.form-inline
                  form-group
                    label 每頁顯示
                    input(type='text')
                    span 筆
                  form-group
                    label 共
                    span #
                    span 筆
              .clearfix

              //- .animated-checkbox
