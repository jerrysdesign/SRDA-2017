            .search-results
              .table-responsive.search-messages
                table.table.table-striped.table-hover
                  thead
                    tr
                      th
                        .animated-checkbox
                          label
                            input(type="checkbox")
                            span.label-text  全選
                      th 變項名稱
                      th 變項說明
                      th 選項
                      th 類型
                      th 西元年
                  tbody
                    -for (var i = 1; i <10; i++)
                      tr
                        td
                          .animated-checkbox
                            label
                              input(type="checkbox")
                        td
